@model Book

@{
    ViewData["Title"] = Model.Title;
}

<h1>@Model.Title</h1>
<p>Автор: <strong>@Model.Author</strong></p>
<p>@Model.Desctiption</p>
<p>Цена: <strong>@Model.Price</strong></p>
<form action="@Url.Action("Add", "Cart")" method="post">
